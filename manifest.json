{
    "manifest_version": 3,
    "name": "QR Code Scanner",
    "version": "1.0",
    "description": "Scanning QR codes directly from the browser screen",
    "permissions": ["activeTab", "scripting"],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "<all_urls>"
    ]
}
